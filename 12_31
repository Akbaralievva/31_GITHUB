// Шаг 1: Создание массива предметов
var subjects = ["Математика", "Физика", "Литература", "Английский"]

// Шаг 2: Вывод предметов в консоль
print("Предметы расписания: \(subjects)")

// Шаг 3: Добавление нового предмета
subjects.append("Химия")

// Шаг 4: Замена предмета
if let index = subjects.firstIndex(of: "Физика") {
    subjects[index] = "История"
}

// Шаг 5: Проверка наличия предмета "Физика"
if subjects.contains("Физика") {
    print("Предмет \"Физика\" присутствует в расписании.")
} else {
    print("Предмет \"Физика\" отсутствует в расписании.")
}

// Шаг 6: Создание нового массива с предметами, начинающимися на "Л"
let subjectsWithL = subjects.filter { $0.hasPrefix("Л") }
print("Предметы, начинающиеся на \"Л\": \(subjectsWithL)")
